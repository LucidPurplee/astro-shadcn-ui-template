---

<BaseLayout
  title="Serum"
  description="Serum Landing Page"
>
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 overflow-hidden">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 1400 600"
        class="min-h-full min-w-full"
      >
        <defs>
          <pattern
            id="grid"
            width="24"
            height="24"
            patternUnits="userSpaceOnUse"
          >
            <path
              d="M 24 0 L 0 0 0 24"
              fill="none"
              stroke="hsl(var(--muted))"
              strokeWidth="1"
              strokeOpacity={0.5}></path>
          </pattern>
        </defs>
        <rect width="1400" height="600" fill="url(#grid)"></rect>
      </svg>
    </div>
    <div class="relative">
      <div
        class="absolute left-0 z-10 hidden h-full w-1/2 bg-[linear-gradient(to_right,hsl(var(--background))_85%,transparent_100%)] md:block"
      >
      </div>
      <div
        class="md:-space-x-26 container relative flex flex-col items-start md:flex-row md:items-center"
      >
        <div
          class="z-20 -mx-[calc(theme(container.padding))] w-[calc(100%+2*theme(container.padding))] shrink-0 bg-background px-[calc(theme(container.padding))] pt-32 md:w-1/2 md:bg-transparent md:pb-32"
        >
          <div class="flex flex-col items-start text-left">
            <div class="max-w-sm">
              <h1 class="my-6 text-pretty text-4xl font-bold lg:text-6xl">
                Define Unforgettable_
              </h1>
              <h1 class="my-6 text-pretty text-xl font-semibold lg:text-2xl">
                Like the many experiences already powered by serum AI
              </h1>

              <Button className="w-full sm:w-auto">
                Get Started
              </Button>

              <Button variant="outline" className="w-full sm:w-auto">
                Examples
              </Button>

            </div>
          </div>
        </div>
        <div>
          <div>
            <div class="flex flex-col gap-16 pb-8 pt-12 md:py-32">
              {
                integrations.map((line, i) => (
                  <div key={i} class="flex gap-x-24 odd:-translate-x-24">
                    {line.map((integration) => (
                      <div
                        key={integration.id}
                        class="size-24 rounded-xl border border-background bg-background shadow-xl"
                      >
                        <div class="size-full bg-muted/20 p-4">
                          <img alt="Integration" src={integration.icon} />
                        </div>
                      </div>
                    ))}
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Logos />
</BaseLayout>
